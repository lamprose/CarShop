<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.carshop.server.dao.SecurityMapper">
    <resultMap id="SecurityMap" type="SecurityQuestion">
        <id column="id" property="user.id"/>
        <id column="questionType" property="questionType"/>
        <result column="answer" property="answer"/>
        <association column="id" property="user"
                     select="com.carshop.server.dao.UserMapper.selectOneById" javaType="User"/>
    </resultMap>

    <select id="selectAllByUserId" resultMap="SecurityMap">
        SELECT * FROM securityQuestion WHERE id = #{id}
    </select>

    <insert id="insertThreeQuestions">
        INSERT INTO securityQuestion
        (id, questionType, answer)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.user.id}, #{item.questionType}, #{item.answer})
        </foreach>
    </insert>
</mapper>